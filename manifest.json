{
  "name": "Ultimate Tab Counter",
  "version": "1.0.0",
  "description": "Tab Counter, counts the number of opened tabs and windows",
  "manifest_version": 3,
  "author": "FireIceTech",
  "action": {
    "default_title": "Ultimate Tab Counter",
    "default_popup": "index.html",
    "default_icon": "128.png"
  },
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "css": [
        "index.css"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}